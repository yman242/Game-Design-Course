        <arguments>
          <argument>
            <kind>1</kind>
            <string>if (isFocus) {
    if ((isDestroyed) &amp;&amp; (!hasShownDestruction))
    {
        // Create an Explosion at this planet location
        instance_create(x, y, obj_backgroundExplosions);
        
        // Shake the screen
        scriptShakeScreen(10, 60, 2, true);
        
        // Increase the planet kill count
        global.playerPlanetsKilled += 1;
        
        // Add the population to the kill counter
        global.playerKillCount += population;
        
        if (isBoss) {
            // Goto Narrative Room
            room_goto(room_Narrative_Section);
        }
        
        // destroy the planet
        instance_destroy();
    }
    
    if (isControlled)
    {
        
        // Increase the planet kill count
        global.playerPlanetsKilled += 1;
        
        // Add the population to the kill counter
        global.playerKillCount += population;
        
        if (isBoss) {
            room_goto(room_Narrative_Section);
        }
    }
    
    /*if ((isDestroyed) &amp;&amp; (hasShownDestruction))
    {
        visible = false;
    }*/

    // Mouse in bounds?
    mouseInBounds = false;
    info_created = true;
    
    scalex = global.MIN_SCALE;
    scaley = global.MIN_SCALE;
    
    if ((mouse_x &gt; x - sprite_width) &amp;&amp; (mouse_x &lt; x + sprite_width)) {
        if ((mouse_y &gt; y - (sprite_height/4)*3) &amp;&amp; (mouse_y &lt; y + (sprite_height/4)*3)) {
            // Mouse is in bounds
            scalex = global.MAX_SCALE;
            scaley = global.MAX_SCALE;
            
            mouseInBounds = true;
        }
    }
    
    if (mouseInBounds &amp;&amp; mouse_check_button_pressed(mb_left) &amp;&amp; !global.mouse_in_info_bounds) {
        scriptDeselectAllPlanets();
    
        // Screen Shake (magnitude in pixels, Duration in steps, priority of shake, whether this should always overwrite another shake)
        //scriptShakeScreen(3, 3, 0, false);
        
        scriptZoomIn();
        
        isSelected = true;
        global.currently_selected_planet_id = myRef;
    }
    
    if (isSelected &amp;&amp; mouse_check_button_pressed(mb_left) &amp;&amp; !mouseInBounds &amp;&amp; !global.mouse_in_info_bounds) {
        scriptDeselectAllPlanets();
    }
    
    if (isSelected) {
        global.orbitSpeed = 0;
        scalex = global.MAX_SCALE;
        scaley = global.MAX_SCALE;
    }
    
    if (isSelected &amp;&amp; !info_created) {
        instance_create(x + 25, y - (sprite_get_height(sprite_planet_selection) / 2), obj_planet_info);
        //scriptCenterView(x, y, zoomlevel);
        info_created = true;
    }
    
    // Planet Rotation
    orbStepAngle = global.orbitSpeed;
    
    var newX = global.CENTER_OF_GALAXY_X + (x - global.CENTER_OF_GALAXY_X) * cos(orbStepAngle) - (y - global.CENTER_OF_GALAXY_Y) * sin(orbStepAngle);
    var newY = global.CENTER_OF_GALAXY_Y + (x - global.CENTER_OF_GALAXY_X) * sin(orbStepAngle) + (y - global.CENTER_OF_GALAXY_Y) * cos(orbStepAngle);
    
    x = newX;
    y = newY;
    
    if (isBoss) {
        scalex = scalex * 2;
        scaley = scaley * 2;
    }
    
    image_xscale = scalex;
    image_yscale = scaley;
}
</string>
